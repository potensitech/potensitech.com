    {
      "pattern": "(latest|update|trend|list|price)\\s+(\\d{4})",
      "replacement": "\\1 {current_year}",
      "description": "Update keywords that indicate the latest information"
    },
    {
      "pattern": "(in|on|for)\\s+year\\s+(\\d{4})",
      "replacement": "\\1 year {current_year}",
      "description": "Update time references with prepositions"
    },
